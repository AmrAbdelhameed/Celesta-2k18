<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimaryDark" >

    <android.support.v4.view.ViewPager
        android:id="@+id/events_pager"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMyProfile"
        android:onClick="toMyProfile">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_person_pin_white_24dp"
            android:layout_gravity="center_vertical"/>
    <TextView
        style="@style/home_tabs_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_profile"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorEvents"
        android:layout_marginTop="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_event_note_white_24dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/home_tabs_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/events"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSchedule"
        android:layout_marginTop="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_event_white_24dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/home_tabs_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTeam"
        android:layout_marginTop="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_group_white_24dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView"
            style="@style/home_tabs_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/team" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSponsors"
        android:layout_marginTop="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_monetization_on_white_24dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/home_tabs_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sponsors"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAbout"
        android:layout_marginTop="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_info_white_24dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/home_tabs_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGallery"
        android:layout_marginTop="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_photo_library_white_24dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/home_tabs_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gallery"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSocial"
        android:layout_marginTop="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_public_white_24dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/home_tabs_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/social"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>